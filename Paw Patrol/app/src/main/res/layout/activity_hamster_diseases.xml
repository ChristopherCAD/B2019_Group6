<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hamster_diseases"
    android:orientation="vertical"
    android:layout_gravity="top|center"
    android:background="@drawable/ic_hamster_wallpaper_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/hamster_Disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="List of Related Disease"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/ic_corner_radius"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-light"

            />

        <GridLayout
            android:layout_below="@id/hamster_Disease"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:columnCount="1"
            android:rowCount="15">

            <androidx.cardview.widget.CardView
                android:id="@+id/hamsterDisease1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="0"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/hamsterdisease1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wet Tails"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hamsterDisease2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="1"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/hamsterdisease2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Atrial Thrombosis"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hamsterDisease3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="2"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/hamsterdisease3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tyzzer's Disease"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hamsterDisease4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="3"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/hamsterdisease4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salmonella"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hamsterDisease5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="4"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/hamsterdisease5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tape Worms"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hamsterDisease6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="5"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/hamsterdisease6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pneumonia"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hamsterDisease7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="6"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/hamsterdisease7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Under Research"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>


    </LinearLayout>

</ScrollView>