<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bird_diseases"
    android:orientation="vertical"
    android:layout_gravity="top|center"
    android:background="@drawable/ic_bird_wallpaper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/bird_Disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="List of Related Disease"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/ic_corner_radius"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-light"

            />

        <GridLayout
            android:layout_below="@id/bird_Disease"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:columnCount="1"
            android:rowCount="15">

            <androidx.cardview.widget.CardView
                android:id="@+id/birdDisease1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="0"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/birddisease1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salmonella"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/birdDisease2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="1"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/birddisease2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bird Mites"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/birdDisease3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="2"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/birddisease3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feather Disease"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/birdDisease4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="3"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/birddisease4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pacheco Disease"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/birdDisease5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="4"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/birddisease5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pox-Virus Infections"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/birdDisease6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="5"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/birddisease6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="West Nile Virus"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/birdDisease7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="6"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >


            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</ScrollView>