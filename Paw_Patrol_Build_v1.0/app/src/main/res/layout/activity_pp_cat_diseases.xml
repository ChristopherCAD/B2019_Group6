<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pp_cat_diseases"
    android:orientation="vertical"
    android:layout_gravity="top|center"
    android:background="@drawable/wlcmimg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/cat_Disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="List of Related Disease"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/ic_corner_radius"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-light"

            />

        <GridLayout
            android:layout_below="@id/cat_Disease"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:columnCount="1"
            android:rowCount="15">

            <androidx.cardview.widget.CardView
                android:id="@+id/catDisease1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="0"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/catdisease1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancer"
                        android:textSize="25sp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/catDisease2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="1"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/catdisease2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kidney Disease"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/catDisease3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="2"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/catdisease3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feline Immunodeficiency Virus (FIV)"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/catDisease4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="3"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/catdisease4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feline Leukemia Virus (FELV)"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/catDisease5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="4"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/catdisease5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pancreatitis"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/catDisease6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="5"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/catdisease6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hyperthyroidism"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>


                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/catDisease7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="0"
                android:layout_rowWeight="0"
                android:layout_row="7"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"

                >

                <LinearLayout
                    android:id="@+id/catdisease7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Under Research"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="fill_horizontal">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>


    </LinearLayout>

</ScrollView>