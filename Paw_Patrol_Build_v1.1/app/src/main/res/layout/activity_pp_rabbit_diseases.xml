<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pp_rabbit_diseases"
    android:gravity="top|center"
    android:orientation="vertical"
    android:background="@drawable/ic_rabbit_wallpaper">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/rabbit_Disease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="List of Related Disease"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@drawable/ic_corner_radius"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed-light"

        />

    <GridLayout
        android:layout_below="@id/rabbit_Disease"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:columnCount="1"
        android:rowCount="15">

        <androidx.cardview.widget.CardView
            android:id="@+id/rabbitDisease1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="0"
            android:layout_rowWeight="0"
            android:layout_row="0"
            android:layout_column="0"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"

            >

            <LinearLayout
                android:id="@+id/rabbitdisease1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overgrown Teeth"
                    android:textSize="25dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:layout_gravity="fill_horizontal">

                </TextView>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/rabbitDisease2"
